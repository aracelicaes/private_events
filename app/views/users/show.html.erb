<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<h3>
  All Events Created By:
  <%= @user.name %>
</h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Event By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% unless @user_events.nil? %>
    <% @user_events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.creator.name %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

